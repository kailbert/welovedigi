$pathToFonts = '~assets/fonts/'

$fonts = 'Inter-Regular' 'Inter-Bold' 'Inter-Medium'

for font in $fonts
	@font-face
		font-family font
		src url($pathToFonts + font'.woff2') format('woff2'), url($pathToFonts + font'.woff') format('woff')
		font-weight normal
		font-style normal
		font-display swap
body
	regular()
	::selection
		color $white
		background $primary
p
	line-height 1.666
	font-size 1.8rem
	color $text

h1, h2, h3, h4, h5
	headline()
	color $black
	font-feature-settings "liga", "dlig"
	line-height 1
	span
		color $primary
h1
	font-size 7.2rem
	line-height 1.2
	+mobile()
		font-size 4.2rem
h2
	font-size 5.6rem
	line-height 1.25
	+mobile()
		font-size 3.6rem
		line-height 1.2
h3
	font-size 26px
	line-height 1.3
	margin-bottom 8px
	+mobile()
		font-size 20px
		line-height 1.2
h4
	font-size 20px
	line-height 1.4
h5
	font-size 1rem
	color $text-light
	line-height 1.6
a,p a
	text-decoration none
	color $text
p
	a
		color $primary
	+ p
		margin-top 16px

ul
	li
		list-style-type none
		line-height 1.6
hr
	height 1px
	background $border
	border none
	margin 12px 0
p.small
	font-size 11px
	letter-spacing .2px
p.dropcap:first-letter
	bold()
	font-size 5.4rem
	float left
	line-height 0.6
	padding-top 1rem
	margin-left -0rem
	margin-right .8rem
	margin-bottom -0rem
	display block
	position relative
	+mobile()
		font-size 5rem
		padding-top .7rem
p b, b, strong
	bold()
fieldset
	border none
	padding 0
small,fieldset
	b,strong,a
		bold()

